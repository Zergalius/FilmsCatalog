@model FilmEditViewModel

@{
    ViewData["Title"] = "Редактирование фильма";
    var img = Model.PosterId == null ? "/images/default.jpg" : $"/Poster/Get?id={Model.PosterId}";
}

<h3>Редактирование фильма</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(m => m.Description, 5, 20, new { @class = "form-control" })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer" class="control-label"></label>
                <input asp-for="Producer" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Poster" class="control-label">Укажите новый для замены</label>
                <input asp-for="Poster" type="file">
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>

        </form>
    </div>
    <div class="col-md-4">
        <h5>Текущий постер</h5>
        <img class="image-preview" src="@img">
    </div>
</div>
<hr />
<div>
    <a asp-action="Index" asp-controller="Home"><i class="fas fa-chevron-circle-left fa-3x"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_ScriptPartial" />
}